{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "diagnostics": true,
    "listFiles": false,
    "pretty": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitUseStrict": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "noEmit": false
  },
  "compileOnSave": true,
  "files": [
    "./Compiler/CachingCompilerHost.ts",
    "./Compiler/Compiler.ts",
    "./Compiler/CompilerError.ts",
    "./Compiler/CompilerFile.ts",
    "./Compiler/CompilerOutput.ts",
    "./Compiler/CompilerResult.ts",
    "./Compiler/CompileStream.ts",
    "./Compiler/TsCompilerOptions.ts",
    "./Compiler/WatchCompilerHost.ts",

    "./Project/ProjectConfig.ts",

    "./Transform/TransformPlugin.ts",

    "./Utils/TsCore.ts",
    "./Utils/Utilities.ts",

    "./TsCompiler.ts"
  ],

  "bundles": {
    "tscompiler": {
      "files": [ "./TsCompiler.ts" ],
      "config": {
        "package": "component",
        "packageNamespace": "TsCompiler",
        "outDir": "./bundle",
        "minify": false
      }
    }
  }
}