{
  "compileOnSave": true,

  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "diagnostics": true,
    "listFiles": false,
    "pretty": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitUseStrict": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "noEmit": false
  },

  "exclude": [
    "node_modules"
  ],

  "bundles": {
    "tscompiler": {
      "files": [ "./TsCompiler.ts" ],
      "config": {
        "package": "component",
        "packageNamespace": "TsCompiler",
        "outDir": "./bundle",
        "minify": false
      }
    }
  }
}