{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    //"declaration": true,
    "noEmitOnError": true,
    "removeComments": false,
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node",
      "typescript"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
