{
  "compileOnSave": true,

  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": false,
    "sourceMap": true,
    "noLib": false,
    "skipLibCheck": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "types": [
      "node",
      "typescript",
      "mocha"
    ]
  }
}